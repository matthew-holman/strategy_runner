{
  "strategy_id": "sma_pullback_buy",
  "name": "20SMA Pullback with Volume + RSI Filter",
  "signal_filters": [
    {
      "indicator": "sma_50",
      "comparison": "<",
      "value": 1.0,
      "comparison_field": "close",
      "note": "Uptrend confirmation — price must be above SMA50"
    },
    {
      "indicator": "sma_20",
      "comparison": ">",
      "value": 1.0,
      "comparison_field": "close",
      "note": "Pullback below SMA20"
    },
    {
      "indicator": "rsi_14",
      "comparison": "between",
      "min": 40,
      "max": 60,
      "value": 0.0,
      "note": "RSI should be strong but not overbought"
    },
    {
      "indicator": "volume",
      "comparison": ">",
      "value": 1.5,
      "comparison_field": "avg_vol_20d",
      "note": "Volume spike confirmation"
    }
  ],
  "validate_at_open_filters": [
    {
      "indicator": "open",
      "comparison": "<",
      "value": 1.02,
      "comparison_field": "close",
      "note": "Avoid chasing — open should not gap up more than 2% from previous close"
    },
    {
      "indicator": "open",
      "comparison": ">",
      "value": 0.98,
      "comparison_field": "close",
      "note": "Avoid weakness — open should not gap down more than 2% from previous close"
    },
    {
      "indicator": "atr_14",
      "comparison": ">",
      "value": 0.01,
      "comparison_field": "open",
      "note": "Ensure enough volatility — ATR at least 1% of open price"
    }
  ],
  "ranking": [
    {
      "indicator": "rsi_14",
      "function": "gaussian",
      "center": 50,
      "sigma": 10,
      "weight": 0.3
    },
    {
      "indicator": "volume",
      "function": "log_ratio",
      "denominator": "avg_vol_20d",
      "weight": 0.4,
      "max": 5
    },
    {
      "indicator": "close_position",
      "function": "linear",
      "weight": 0.3
    }
  ],
  "max_signals_per_day": 5
}
